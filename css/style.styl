.dark
  --bgColor: #181818
  --fontColor: silver
  --bgColor2: #2b2b2b
  --spColor: rgb(245, 154, 169)
  --tbborder: #7a7a7a
  --codebgColor: rgba(255, 255, 255, 0.06)

.light
  --bgColor: #FEE1EA
  --fontColor: #000
  --bgColor2: #fafafa
  --spColor: #9C0E06
  --tbborder: #ebebeb
  --codebgColor: #fafafa

html
  font-size: 62.5%
  -webkit-text-size-adjust: none;
  --global-font-family: 'Playfair Display','Noto Sans SC', sans-serif

@keyframes main-up {
  from {
    opacity: 0;
    transform: translateY(2rem);
  }
  to {
    opacity: 1;
    transform: none;
  }
}


body
  background-color: var(--bgColor)
  transition-property: background-color,color
  transition-duration: 0.5s

* 
  margin: 0
  padding: 0
  box-sizing: border-box
  outline: none
  border: none

.main-body a
  color: var(--spColor)
  transition: color 0.5s
  

.show-area
  width: 70rem
  margin: auto
  margin-top: 5rem
  flex-direction: column
  flex: 1
  align-items: center
  justify-content: center

.main-body {
  margin-top: 0rem;
  animation-name: main-up;
  animation-duration: 0.5s;
  animation-timing-function: ease-out;
  min-height: 70vh;
}

.main-body-inside {
  margin-top: 0rem;
  margin-bottom: 0rem;
  animation-name: main-up;
  animation-duration: 0.5s;
  animation-timing-function: ease-out;
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}

.blog-title-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 8rem; /* 或适当的高度 */
}

.blog-title {
  margin: 1rem;
}

.blog-desc
  margin-bottom: 0rem
  font-weight: normal
  text-align: center

.blog-info
  text-align: justify

.posts-header
  margin: 1.5rem 0

.toc-container
  width: 100%
  position: sticky
  top: 0
  z-index: 999
  pointer-events: none

.toc-toggle
  margin-left: auto
  width: 5rem
  height: 2rem
  display: flex
  justify-content: center
  align-items: center
  background-color: var(--bgColor)
  pointer-events: auto
  transition-property: background-color,box-shadow
  transition-duration: 0.5s
  box-shadow: 1px 0 var(--bgColor)

.toc-toggle i
  cursor: pointer
  pointer-events: auto
  color: var(--fontColor)
  transition: color 0.5s

.toc
  display: none
  list-style: none
  background-color: var(--bgColor)
  pointer-events: auto
  transition-property: background-color,color,box-shadow
  transition-duration: 0.5s

.show
  display: block

.toc-child
  list-style: none
  padding-inline-start: 2rem

.toc a
  text-decoration: none
  font-size: 1.5rem

.article
  text-align: justify

.article-header
  margin-bottom: 2rem

.article-details
  margin-top: 3rem
  display: flex
  font-size: 1.4rem
  justify-content: space-between

.article-post-date
  font-family: var(--global-font-family)
  color: var(--fontColor)
  transition: color 0.5s

.article-details a
  text-decoration: none

a[class^='tag-']
  text-decoration: none
  padding: 0.25rem

.page-title
  margin-top: 2rem
  margin-bottom: 2rem
  text-align: center

.category-list-item::marker
  content: none

.category-list-item
  display: flex
  justify-content: space-between
  margin: 1.5rem 0

.category-list-link
  font-size: 1.7rem
  text-decoration: none

.category-list-count
  font-size: 1.7rem
  font-family: var(--global-font-family)
  color: var(--fontColor)

.tag-cloud-container
  margin: 1.5rem 0

footer
  display: flex
  flex-direction: column
  align-items: center
  padding: 2rem 0
  font-size: 1.4rem 
  margin-top: auto
  font-weight: 500

.footer-info
  font-family: var(--global-font-family)
  color: var(--fontColor)
  transition: color 0.5s
  padding: 0.5rem 0

.footer-info a
  text-decoration: underline
  color: var(--fontColor)

.footer-info a:hover
  color: var(--spColor)

.footer-i
  margin-left: 1rem
  

.footer-i i
  font-size: 1.4rem 

::-webkit-scrollbar {
  width: 4px;
  height: 4px;
}

::-webkit-scrollbar-thumb {
  background: rgba(128, 128, 128, 0.7);
}
::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(128, 128, 128, 0.2);
}

::-webkit-scrollbar-thumb:active {
  background-color: rgb(128, 128, 128);
}

.center-section img {
  max-width: 100%; /* Ensure the image doesn't exceed the width of its container */
  height: auto; /* Maintain the aspect ratio of the image */
  display: inline-block; /* Align the image as an inline-block element */
}


.left-section, .center-section, .right-section
    width: 100%;
    display: flex;
    float: inherit;
    padding: 10px;
    text-align: center;
    align-items: center;
    align-content: stretch;
    justify-content: flex-end;
    flex-direction: column;

.content-wrapper
  display: flex
  flex-direction: column  /* Stack items vertically by default */
  justify-content: space-between

@media screen and (min-width: 768px)
  .content-wrapper
    flex-direction: row  /* Display items side by side on larger screens */

  .left-section, .center-section, .right-section
    width: 50%;
    display: flex;
    float: inherit;
    padding: 10px;
    text-align: center;
    align-items: center;
    align-content: stretch;
    justify-content: flex-end;
    flex-direction: column


@import '../_partial/header.styl'
@import '../_partial/article.styl'
@import '../_partial/archive.styl'
@import './adapt.styl';
